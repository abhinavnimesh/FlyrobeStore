<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/bold_font"
        android:textSize="20sp"
        android:text="text_bluetooth_off" />

    <include layout="@layout/layout_divider_horizontal"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/bluetooth_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_enable"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/edit_text_round_border"
            android:text="text_enable"
            android:textColor="@color/theme_blue"
            android:textStyle="bold"

            android:visibility="gone" />

        <Button
            android:id="@+id/btn_view_paired"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:enabled="false"
            android:text="Show"
            android:background="@drawable/edit_text_round_border"
            android:textColor="@color/theme_blue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/edit_text_round_border"

            android:enabled="false"
            android:text="Scan Device"
            android:textColor="@color/theme_blue"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>