<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/db_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:letterSpacing="0.1"
            android:text="Title"
            android:gravity="center"
            android:textColor="@color/bold_font"
            android:textSize="20sp" />


        <include layout="@layout/layout_divider_horizontal"/>



        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/error_small"
            />

        <TextView
            android:id="@+id/db_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            tools:text="Hello"
            android:textColor="#303941"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_db_ok"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="CANCEL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/edit_text_round_border"
            android:textColor="@color/theme_blue" />
    </LinearLayout>
</RelativeLayout>
